<div class="card project">
  <div class="bg-primary">
    <div class="row mb-4 text-white">
      <div class=" col-md-5">
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          {{{get_emoji}}}
          <a class="text-white">{{name}}</a>
        </h2>
        
      </div>
      <div class="col-md-7">
        <p class="text-light text-right">Created by {{user.name}} on {{format_date date_created}}</p>
      </div>
    </div>
  </div>
  <div class="row text-white">
    <div class= "col-md">
        <p class="mx-2 bg-dark text-white">
          {{description}}
        </p>
    </div>
  </div>
</div>
<div class="text-center ">
  <p>
    <h2 class="text-white">↓ Add a comment! ↓ </h2>
  </p>
</div>

<div> 
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-contents">Leave a comment:</label>
      <textarea class="form-input" id="comment-contents" name="comment-contents"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

{{#if comments.length}}
<div class="comment-list text-white">
  <h4>Comments:</h4>

  {{#each comments as |comment| }}
  <div class="row mb-4">
    <div class="col-md-5 comment">
      <p>{{comment.contents}}</p>
      <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
<script>window.post = {{ id }} </script> 
<script src="../js/comment.js"></script>